<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="@dimen/calendar_day_birthday_icon"
        android:layout_height="@dimen/calendar_day_birthday_icon"
        android:layout_marginRight="@dimen/calendar_day_birthday_icon_margin_right"
        android:layout_marginBottom="@dimen/calendar_day_birthday_icon_margin_bottom"
        android:src="@drawable/birthday_white"/>

    <smartassist.appreciate.be.smartassist.views.TextView
        android:id="@+id/textView_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typeface="montserrat_light"
        android:textColor="@color/general_text_white"/>

</LinearLayout>