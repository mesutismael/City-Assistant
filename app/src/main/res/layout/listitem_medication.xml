        android:paddingTop="@dimen/list_padding_vertical_inner"
        android:paddingBottom="@dimen/list_padding_vertical_inner"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/imageView_time_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/list_padding_horizontal_inner"
        android:paddingRight="@dimen/list_padding_horizontal_inner"
        android:paddingTop="@dimen/list_padding_vertical_inner"
        android:paddingBottom="@dimen/list_padding_vertical_inner"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/imageView_time_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/list_padding_horizontal_inner"
        android:paddingRight="@dimen/list_padding_horizontal_inner"
        android:paddingTop="@dimen/list_padding_vertical_inner"
        android:paddingBottom="@dimen/list_padding_vertical_inner"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/imageView_time_5"
