<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/calendar_day_birthday_padding_right">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/calendar_day_item_padding"
        android:paddingBottom="@dimen/calendar_day_item_padding"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/calendar_day_birthday_icon"
            android:layout_height="@dimen/calendar_day_birthday_icon"
            android:layout_marginRight="@dimen/calendar_day_birthday_icon_margin_right"
            android:layout_marginBottom="@dimen/calendar_day_birthday_icon_margin_bottom"
            android:src="@drawable/birthday"/>

        <smartassist.appreciate.be.smartassist.views.TextView
            android:id="@+id/textView_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typeface="montserrat_light"/>

    </LinearLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider_height"
        android:background="@color/calendar_day_list_divider"/>

</LinearLayout>